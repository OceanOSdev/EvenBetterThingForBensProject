@model IEnumerable<WebApplication1.Models.PendantProduct>
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Pendants";
}

<h2>Shopping Cart</h2>

@if (Request.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Order New Pendant", "Create")
    </p>
    try
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PendantSize)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <!--<th>
                    @*Html.DisplayNameFor(model => model.UploadedFile)*@
                </th>-->
            </tr>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PendantSize)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <!--<td>
                        @*Html.DisplayFor(modelItem => item.FileName)*@
                    </td>-->
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>

            }

        </table>
    }
    catch (Exception ex)
    {

    }
}
else
{
    <div class="jumbotron">
        <h1>Uh oh!</h1>
        <p class="lead">Sorry, you need to be signed in to do that! Why not sign up?</p>

    </div>

    <div class="container">
        @Html.ActionLink("register", "Register", "Account")
        or
        @Html.ActionLink("login", "Login", "Account")
    </div>

}